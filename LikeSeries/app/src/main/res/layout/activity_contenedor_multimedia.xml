<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".ContenedorMultimedia">

    <include
        android:id="@+id/appbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titulo_Multimedia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5sp"
                    android:text="TextView"
                    android:textColor="@color/letras" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10sp"
                            android:layout_weight="3"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imagen_Multimedia"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|left"
                                android:layout_weight="3" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/nohasvotado"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center|left"
                                android:text="@string/nohavotado"
                                android:textColor="@color/letras" />

                            <ImageView
                                android:id="@+id/imagenvoto"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|left"
                                android:layout_weight="3"
                                app:srcCompat="@drawable/estrella_off" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|fill_horizontal"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/votacionmedia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="3"
                            android:gravity="right"
                            android:text="TextView"
                            android:textColor="@color/letras" />

                        <TextView
                            android:id="@+id/votantes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5sp"
                            android:layout_weight="3"
                            android:text="TextView"
                            android:textColor="@color/letras" />

                        <TextView
                            android:id="@+id/compartirresultado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:background="@drawable/compartir"
                            android:gravity="center" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15sp"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/unlike" />

                    <TextView
                        android:id="@+id/votoslike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TextView"
                        android:textColor="@color/letras" />

                    <ImageView
                        android:id="@+id/nolike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/unnolike" />

                    <TextView
                        android:id="@+id/votosnolike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TextView"
                        android:textColor="@color/letras" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mostrar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/descripcion_Multimedia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:layout_marginEnd="5sp"
                        android:text="TextView"
                        android:textColor="@color/letras"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/productora_Multimedia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:layout_marginEnd="5sp"
                        android:text="TextView"
                        android:textColor="@color/letras" />

                    <TextView
                        android:id="@+id/capitulos_Multimedia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:layout_marginEnd="5sp"
                        android:textColor="@color/letras"
                        tools:visibility="gone" />

                    <TextView
                        android:id="@+id/Direccion_Multimedia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:layout_marginEnd="5sp"
                        android:textColor="@color/letras"
                        tools:visibility="gone" />

                    <TextView
                        android:id="@+id/fechaEstreno_Multimedia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:layout_marginEnd="5sp"
                        android:textColor="@color/letras"
                        tools:visibility="gone" />

                    <TextView
                        android:id="@+id/duracion_Multimedia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:layout_marginEnd="5sp"
                        android:textColor="@color/letras"
                        tools:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/genero"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10sp"
                            android:layout_marginBottom="5sp"
                            android:layout_weight="1"
                            android:text="Genero"
                            android:textColor="@color/letras" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/genero1_multimedia"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/letras" />

                            <TextView
                                android:id="@+id/genero2_multimedia"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:textColor="@color/letras" />

                            <TextView
                                android:id="@+id/genero3_multimedia"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/letras" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:id="@+id/divider5"
                        android:layout_width="match_parent"
                        android:layout_height="5sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="5sp"
                        android:layout_weight="1"
                        android:background="@color/common_google_signin_btn_text_dark_focused" />


                </LinearLayout>

                <TextView
                    android:id="@+id/mostrarmasomenos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20sp"
                    android:gravity="center"
                    android:text="@string/mostrarmas" />

                <TextView
                    android:id="@+id/trailer_Multimedia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20sp"
                    android:textColor="@color/letras"
                    tools:visibility="visible" />

            </LinearLayout>

            <include
                android:id="@+id/cajacomentario"
                layout="@layout/cajacomentario"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20sp"
                android:background="@color/colorPrimary" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>